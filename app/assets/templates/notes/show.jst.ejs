<div class="container" id="show">
  <div class="row">
    <div class="show-note col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <h2 id="title"><%=note.escape('title') %></h2>
        <br>
        <p id="body"> <%= note.get('html_body') %></p>
        <br>
      <a href="#/notes">Back</a>
      <% if(parseInt(global_user_id) == note.escape('user_id') ){ %>
        <a href="#/notes/<%=note.escape('id')%>/edit">Edit</a>
        <button id="delete" class="btn btn-danger">Delete</button>
      <% }; %>
    </div>
  </div>
</div>
