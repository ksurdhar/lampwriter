<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">

      <div class="text-center">
        <h4>Crafting Mode</h4>
        <span id="save-icon"><span class="glyphicon glyphicon-floppy-disk"></span></span>
        <span id="delete-note" class="glyphicon glyphicon-trash"></span>
        <span id="go-back" class="glyphicon glyphicon-remove"></span>
      </div> 
      <br>

      <form id="note-form" class="form-horizontal" role="form">
        <input type="text" name="note[title]" placeholder="Title" value= "<%= note.escape('title')%>" style="border: 0px solid #000000;" autofocus>
      
        <textarea name="note[body]" rows="18" cols="40" placeholder="Body" style="border: 0px solid #000000;"><%= note.escape('body')%></textarea>

        <input type="hidden" name="id" value="<%= note.id %>">
      </form>
    </div>
  </div>
</div>
